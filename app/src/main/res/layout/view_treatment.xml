<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E7EBF2">
    <include layout="@layout/title_bar"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cvCreateAppointment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#E7EBF2"
        app:cardCornerRadius="8dp"
        android:elevation="10dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="120dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:padding="20dp"
                >
                <TextView
                    android:id="@+id/tvTreatDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Treatment Date"
                    android:textColor="@color/black" />
                <EditText
                    android:id="@+id/etTreatmentDate"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:ems="10"
                    android:inputType="date"
                    android:background="@drawable/textbox_background"
                    android:padding="5dp"
                    android:enabled="false" />

                <TextView
                    android:id="@+id/tvTreatTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Treatment Time"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"/>
                <EditText
                    android:id="@+id/etTreatTime"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:ems="10"
                    android:inputType="time"
                    android:background="@drawable/textbox_background"
                    android:padding="5dp"
                    android:enabled="false"/>
                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Treatment Name"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:ems="10"
                    android:inputType="text"
                    android:background="@drawable/textbox_background"
                    android:padding="5dp"
                    android:enabled="false"/>
                <Spinner
                    android:id="@+id/sName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textbox_background"
                    android:spinnerMode="dropdown"/>
                <TextView
                    android:id="@+id/tvDocInCharge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Doctor In Charge"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"/>
                <EditText
                    android:id="@+id/etDocInCharge"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:ems="10"
                    android:inputType="text"
                    android:background="@drawable/textbox_background"
                    android:padding="5dp"
                    android:enabled="false"/>
                <Spinner
                    android:id="@+id/sDocInCharge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textbox_background"
                    android:spinnerMode="dropdown"/>

                <TextView
                    android:id="@+id/tvRemark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Remark"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"/>
                <EditText
                    android:id="@+id/etRemark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:background="@drawable/textbox_background"
                    android:gravity="left"
                    android:padding="5dp"
                    android:enabled="false"/>

                <TextView
                    android:id="@+id/tvPrescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Prescription"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"/>
                <EditText
                    android:id="@+id/etPrescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:background="@drawable/textbox_background"
                    android:gravity="left"
                    android:padding="5dp"
                    android:enabled="false"/>

                <TextView
                    android:id="@+id/tvTreatmentDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Treatment Detail"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"/>
                <EditText
                    android:id="@+id/etTreatmentDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:background="@drawable/textbox_background"
                    android:gravity="left"
                    android:padding="5dp"
                    android:enabled="false"/>


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnSave"
                    android:backgroundTint="#7E83AA"
                    android:text="Save"
                    android:layout_marginHorizontal="40dp"
                    android:textAllCaps="false"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>
        </ScrollView>


    </androidx.cardview.widget.CardView>
    <include layout="@layout/menu_bar"/>
    <include layout="@layout/menu_bar_clinic"/>
</RelativeLayout>