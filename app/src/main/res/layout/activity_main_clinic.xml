<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEF0F4"
    tools:context=".Home.MainActivity">


    <TextView
        android:id="@+id/tvHelloClinic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:text="Hello, "
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tvHelloClinic"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="37dp"
        android:text="Welcome Back"
        android:textColor="#666666"
        android:textSize="15sp" />

    <ImageButton
        android:id="@+id/ibLogout"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:background="#00000000"
        android:padding="5dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/log_out"
        android:layout_alignParentEnd="true"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_marginTop="60dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:orientation="vertical"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/cvQueue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="0dp"
            app:contentPadding="5dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#CACBCD"
            app:cardCornerRadius="8dp">

            <TextView
                android:id="@+id/tvQueueNoC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginTop="20dp"
                android:textSize="45sp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/tvQueue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Queue"
                android:textSize="20sp"
                android:textColor="@color/black" />

            <ImageButton
                android:id="@+id/ibQueue"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:background="#00000000"
                android:padding="5dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/voting"
                android:layout_gravity="right"
                tools:ignore="RtlHardcoded" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvAppointment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="10dp"
            app:contentPadding="5dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#7E83AA"
            app:cardCornerRadius="8dp">

            <TextView
                android:id="@+id/tvAppointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Appointments"
                android:textSize="20sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvAppDetailC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View the list of appointment today"
                android:layout_marginTop="25dp"
                android:textSize="15sp"
                android:textColor="@color/black"/>

            <ImageButton
                android:id="@+id/ibAppointment"
                app:srcCompat="@drawable/upcoming"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:background="#00000000"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:layout_gravity="right"
                tools:ignore="RtlHardcoded" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvPatient"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="10dp"
            app:contentPadding="5dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#CACBCD"
            app:cardCornerRadius="8dp">

            <TextView
                android:id="@+id/tvPatient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Patient List"
                android:textSize="20sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvPatientDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="There are total of 2005 patient records currently"
                android:layout_marginTop="25dp"
                android:layout_marginRight="100dp"
                android:textSize="15sp"
                android:textColor="@color/black"/>



            <ImageButton
                android:id="@+id/imageButton"
                app:srcCompat="@drawable/icons8_bullet_list_64"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:background="#00000000"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:layout_gravity="right"
                tools:ignore="RtlHardcoded"/>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cvScan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="10dp"
            app:contentPadding="5dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#7E83AA"
            app:cardCornerRadius="8dp">
            <TextView
                android:id="@+id/tvScanTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check In Scanning"
                android:textSize="20sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvScan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check In By Scan QR Code"
                android:layout_marginTop="25dp"
                android:textSize="15sp"
                android:textColor="@color/black"/>

            <ImageButton
                android:id="@+id/ibScan"
                app:srcCompat="@drawable/qr_code"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:background="#00000000"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:layout_gravity="right"
                tools:ignore="RtlHardcoded"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvSchedule"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="10dp"
            app:contentPadding="5dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#CACBCD"
            app:cardCornerRadius="8dp">

            <TextView
                android:id="@+id/tvSchedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Schedule"
                android:textSize="20sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvScheDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manage the clinic schedule"
                android:layout_marginTop="25dp"
                android:layout_marginRight="100dp"
                android:textSize="15sp"
                android:textColor="@color/black"/>



            <ImageButton
                android:id="@+id/imageButton2"
                app:srcCompat="@drawable/schedule"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:background="#00000000"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:layout_gravity="right"
                tools:ignore="RtlHardcoded"/>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cvFAQ"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="10dp"
            app:contentPadding="5dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#7E83AA"
            app:cardCornerRadius="8dp">

            <TextView
                android:id="@+id/tvFAQ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FAQ"
                android:textSize="20sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvFAQDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manage the frequently asked questions"
                android:layout_marginTop="25dp"
                android:textSize="15sp"
                android:textColor="@color/black"/>

            <ImageButton
                android:id="@+id/ibFAQ"
                app:srcCompat="@drawable/chat"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:background="#00000000"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:layout_gravity="right"
                tools:ignore="RtlHardcoded"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
    </ScrollView>
    <include layout="@layout/menu_bar_clinic"/>

</RelativeLayout>