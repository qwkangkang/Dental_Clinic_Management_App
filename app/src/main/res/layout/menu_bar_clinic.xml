<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.cardview.widget.CardView
        android:id="@+id/cvMenuBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        app:cardBackgroundColor="#40465F">

        <ImageButton
            android:id="@+id/ibHomeC"
            app:srcCompat="@drawable/home_white"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_gravity="left"
            android:background="#00000000"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:layout_marginTop="5dp"
            tools:ignore="RtlHardcoded"/>


        <ImageButton
            android:id="@+id/ibConsultC"
            app:srcCompat="@drawable/consult_white"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_gravity="right"
            android:layout_marginRight="130dp"
            android:background="#00000000"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:layout_marginTop="8dp"
            tools:ignore="RtlHardcoded"/>

        <ImageButton
            android:id="@+id/ibPatientC"
            app:srcCompat="@drawable/patient_white"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:layout_marginLeft="130dp"
            android:background="#00000000"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:layout_marginTop="3dp"
            tools:ignore="RtlHardcoded"/>

        <ImageButton
            android:id="@+id/ibProfileC"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_gravity="right"
            android:layout_marginTop="8dp"
            android:layout_marginRight="30dp"
            android:background="#00000000"
            android:padding="5dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/user_white"
            tools:ignore="RtlHardcoded" />


    </androidx.cardview.widget.CardView>
</RelativeLayout>